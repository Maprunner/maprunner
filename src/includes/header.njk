<header class="bg-gray-900">
  <div class="container mx-auto max-w-screen-xl px-8 flex-grow">
    {# {% banner "maprunnerbanner.jpeg", "Maprunner banner", "(max-width: 1280px) 100vw, 1280px" %} #}
    {# hard coded to get around problem with eleventy-image usage of smallest option as default img src #}
    <picture>
      <source type="image/webp"
              srcset="/images/maprunnerbanner-380w.webp 380w, /images/maprunnerbanner-768w.webp 768w, /images/maprunnerbanner-1280w.webp 1280w"
              sizes="(min-width: 1280px) 1216px, calc(100vw - 64px)">
      <source type="image/jpeg"
              srcset="/images/maprunnerbanner-380w.jpeg 380w, /images/maprunnerbanner-768w.jpeg 768w, /images/maprunnerbanner-1280w.jpeg 1280w"
              sizes="(min-width: 1280px) 1216px, calc(100vw - 64px)">
      <img alt="Maprunner banner" src="/images/maprunnerbanner.jpeg" sizes="100vw">
    </picture>
    {% include 'navbar.njk' %}
  </div>
</header>